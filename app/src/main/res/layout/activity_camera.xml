<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SurfaceViewActivity"/>

    <SurfaceView
        android:id="@+id/sfvSurfaceView"
        android:layout_width="240dp"
        android:layout_height="160dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SurfaceViewActivity2" />

    <SurfaceView
        android:id="@+id/sfvSurfaceView2"
        android:layout_width="240dp"
        android:layout_height="160dp" />

    <Button
        android:id="@+id/pipi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始解码"/>

    <TextView
        android:id="@+id/t_bitrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="码率(单位kbps)" />

    <EditText
        android:id="@+id/et_bitrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="请输入比特率"
        android:inputType="number"
        android:text="2500" />

    <Button
        android:id="@+id/btn_bitrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>



</LinearLayout>